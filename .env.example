# Aura - AI-First Video Conferencing App
# Environment Configuration

# =============================================================================
# LiveKit Configuration (Required)
# =============================================================================
# Get these from https://cloud.livekit.io
LIVEKIT_API_KEY=your_livekit_api_key_here
LIVEKIT_API_SECRET=your_livekit_api_secret_here
LIVEKIT_URL=wss://your-project.livekit.cloud

# =============================================================================
# Database Configuration (Required)
# =============================================================================
# MongoDB connection string
MONGODB_URI=
# Or for MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/aura?retryWrites=true&w=majority

# =============================================================================
# Authentication (Required)
# =============================================================================
# Clerk authentication - get from https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_secret_key_here
CLERK_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# =============================================================================
# AI & ML Services (Required for AI features)
# =============================================================================
# Anthropic API for Claude AI - get from https://console.anthropic.com
ANTHROPIC_API_KEY=sk-ant-api03-your_anthropic_key_here

# OpenAI API for embeddings - get from https://platform.openai.com
OPENAI_API_KEY=sk-your_openai_key_here

# Pinecone for vector database - get from https://www.pinecone.io
PINECONE_API_KEY=your_pinecone_api_key_here

# =============================================================================
# Email Service (Required for meeting invitations)
# =============================================================================
# Resend API for sending emails - get from https://resend.com
RESEND_API_KEY=re_your_resend_api_key_here

# =============================================================================
# Payment Processing (Required for subscriptions)
# =============================================================================
# Stripe for payment processing - get from https://dashboard.stripe.com
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here
STRIPE_PRICE_ID=price_your_subscription_price_id_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
NEXT_PUBLIC_CUSTOMER_PORTAL=https://billing.stripe.com/p/login/your_portal_id


# =============================================================================
# App Configuration
# =============================================================================
# Your app URL (used for redirects and webhooks)
NEXT_PUBLIC_APP_URL=http://localhost:3000
# For production: NEXT_PUBLIC_APP_URL=https://yourdomain.com

# Connection details endpoint (optional override)
NEXT_PUBLIC_CONN_DETAILS_ENDPOINT=/api/connection-details

# Show settings menu (optional - defaults to false)
NEXT_PUBLIC_SHOW_SETTINGS_MENU=true

# =============================================================================
# Development/Deployment
# =============================================================================
# Node environment
NODE_ENV=development

# Vercel URL (automatically set in Vercel deployments)
# VERCEL_URL=your-app.vercel.app

# NextAuth URL (for email sending)
# NEXTAUTH_URL=http://localhost:3000
